<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title>Document</title>
</head>
<body>
    <form action="/todos/createTodos" method="POST">
        <input type="text" placeholder="ENTER YOUR ACTIVITY" name="todoItem">
        <input type="submit">
    </form>

    <ul>
        <% todo.forEach(element => { %>
            <li class="todoList" data-id="<%=  element._id %>">
                <span class='<%= element.completed === true ? 'completed' : 'not'%>'><%= element.todo %></span>
                <span class="del">Delete</span>
            </li>
        <% }) %>
    </ul>

    <h2><%= left %></h2>
    <script type="text/javascript" src="js/main.js"></script>
</body>
</html>